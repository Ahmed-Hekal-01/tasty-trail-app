<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <ImageView
        android:id="@+id/iv_ingredient_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="ingredient_check"
        android:src="@drawable/ic_check_box_outline_blank"
        app:tint="@color/about_accent_start" />

    <TextView
        android:id="@+id/tv_ingredient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:text="Spaghetti"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/about_text_secondary" />

    <TextView
        android:id="@+id/tv_ingredient_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500g"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@color/about_text_secondary"
        android:textStyle="italic" />

</LinearLayout>
