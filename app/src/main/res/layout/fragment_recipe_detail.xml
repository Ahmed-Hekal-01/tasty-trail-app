<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_background"
    android:fitsSystemWindows="true"
    tools:context=".ui.">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/about_accent_end"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <!-- Recipe image: inside collapsing toolbar so it collapses / parallax correctly -->
            <ImageView
                android:id="@+id/iv_recipe_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/recipe_image"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_meal"
                app:layout_collapseMode="parallax" />

            <!-- gradient overlay on top of image -->
            <View
                android:id="@+id/gradient_overlay"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:background="@drawable/placeholder_meal" />

            <TextView
                android:id="@+id/tv_recipe_name_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingHorizontal="24dp"
                android:paddingBottom="72dp"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:text="Spectacular Spaghetti Carbonara" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                tools:title="Recipe Details"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Save to Favorites"
        android:textColor="@color/about_accent_start"
        app:backgroundTint="@color/white"
        app:icon="@drawable/ic_public"
        app:iconTint="@color/about_accent_start"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|end" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_meta_info"
                style="@style/Widget.Material3.CardView.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/meta_info_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="12dp"
                    android:weightSum="3">

                    <!-- Category -->
                    <LinearLayout
                        android:id="@+id/layout_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_category_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/category_icon"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_category"
                            app:tint="@color/about_text_secondary" />

                        <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            tools:text="Italian" />
                    </LinearLayout>

                    <!-- Area -->
                    <LinearLayout
                        android:id="@+id/layout_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_area_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/area_icon"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_public"
                            app:tint="@color/about_text_secondary" />

                        <TextView
                            android:id="@+id/tv_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            tools:text="Pasta" />
                    </LinearLayout>

                    <!-- Cook time -->
                    <LinearLayout
                        android:id="@+id/layout_cook_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_cook_time_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/time_icon"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_schedule"
                            app:tint="@color/about_text_secondary" />

                        <TextView
                            android:id="@+id/tv_cook_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            tools:text="25 min" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_watch_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingVertical="14dp"
                android:text="Watch Preparation Video"
                app:icon="@drawable/ic_play_circle"
                app:iconGravity="textStart"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
                app:layout_constraintTop_toBottomOf="@id/card_meta_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_ingredients_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ingredients"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                app:layout_constraintTop_toBottomOf="@id/btn_watch_video"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_ingredients_title">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_ingredients_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    tools:listitem="@layout/item_ingredient"
                    tools:itemCount="4"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_instructions_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Preparation Steps"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                app:layout_constraintTop_toBottomOf="@id/card_ingredients"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:animateLayoutChanges="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_instructions_title">

                <LinearLayout
                    android:id="@+id/layout_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_instructions_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lineSpacingMultiplier="1.4"
                        android:maxLines="5"
                        tools:text="Step 1: Here are the very long and detailed instructions...\n\nStep 2: Continue through many steps..."
                        android:textColor="@color/about_text_secondary" />

                    <TextView
                        android:id="@+id/tv_show_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp"
                        android:text="Show More"
                        android:textColor="@color/about_accent_start"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
